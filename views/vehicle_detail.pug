extends layout

block content
  h1= title

  p type : 
    if (vehicle.vehicle_type)
    |  (#{vehicle.vehicle_type})

  p missions assigned :
  
  ul
    each mission in missions_assigned
      li #[a(href=mission.url) #{mission.id}]

    else
        li There are no mission assigned to this vehicle.
  
  hr

  div.action-links
    a(href=vehicle.url+'/delete') Delete
    a(href=vehicle.url+'/update') Update