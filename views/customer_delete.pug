extends layout

block content
  h1= title

  h2 #{customer.name}

  if (mission_list.length == 0)
    p Do you really want to delete this customer ?
    form(method='POST' action='')
      div.form-group
        input#customerid(hidden=true, name='customerid', required=true, value=(customer._id))
      button.btn.btn-primary(type='submit') Confirm
  else 
    p This customer is assigned to the following missions. Deletion impossible.
    ul 
      for mission in mission_list 
        li 
          a(href=mission.url) #{mission.id} 

  if errors
    ul
      for error in errors
        li!= error.msg
