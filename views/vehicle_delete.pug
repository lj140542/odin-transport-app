extends layout

block content
  h1= title

  h2 #{vehicle.registration_number} (#{vehicle.vehicle_type})

  if (mission_list.length == 0)
    p Do you really want to delete this vehicle ?
    form(method='POST' action='')
      div.form-group
        input#vehicleid(hidden=true, name='vehicleid', required=true, value=(vehicle._id))
      button.btn.btn-primary(type='submit') Confirm
  else 
    p This vehicle is assigned to the following missions. Deletion impossible.
    ul 
      for mission in mission_list 
        li 
          a(href=mission.url) #{mission.id} 

  if errors
    ul
      for error in errors
        li!= error.msg
